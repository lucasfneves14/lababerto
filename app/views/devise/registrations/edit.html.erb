<div class="content">
  <div class="animated fadeIn">
    <div class="row">
      <div class="card" style='width:100%'>
        <div class="card-header">
          <strong>Editar</strong> Conta
        </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="card-body card-block">
          <div class="row form-group">
            <div class="col col-md-3"><label for="exampleInputName2" class="pr-1  form-control-label">Email</label></div>
            <div class="col-12 col-md-9"><%= f.input :email,required: true, label:false%></div>
          </div>
          <h4><strong>Mudar Senha</strong></h4>
          <p>Deixe em branco caso nao queira mudá-la.</p>
          <hr>
          <div class="row form-group">
            <div class="col col-md-3"><label for="exampleInputName2" class="pr-1  form-control-label">Nova Senha</label></div>
            <div class="col-12 col-md-9"><%= f.input :password,
                hint: "Deixe em branco caso nao queira mudá-la.",
                required: false,
                input_html: { autocomplete: "new-password" },label: false %></div>
          </div>
          <div class="row form-group">
            <div class="col col-md-3"><label for="exampleInputName2" class="pr-1  form-control-label">Confirmar Nova Senha</label></div>
            <div class="col-12 col-md-9"><%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" },label: false %></div>
          </div>
          <hr>
          <div class="row form-group">
            <div class="col col-md-3"><label for="exampleInputName2" class="pr-1  form-control-label">Senha Atual</label></div>
            <div class="col-12 col-md-9"><%= f.input :current_password,
                hint: "Precisamos da sua senha atual para confirmar as mudanças!",
                required: true,
                input_html: { autocomplete: "current-password" }, label: false %></div>
          </div>
        </div>
        <div class="card-footer">
          <%= f.button :submit, "Atualizar Conta",class:"btn btn-primary btn-sm", style:'background-color:orange'%>

          <%= link_to "Cancelar", :back, class:"btn btn-sm" %>
        </div>
        <%end%>
      </div>
    </div>
    <div class="row">
      <div class="card" style='width:100%'>
        <div class="card-header">
          <strong>Cancelar </strong>minha Conta
        </div>
        <div class="card-body card-block">
            <div class="row form-group mx-auto d-block text-sm-center">
              <%= button_to "Cancelar minha Conta", registration_path(resource_name), data: { confirm: "Você tem certeza que quer cancelar sua conta?" }, method: :delete, class:'external btn btn-danger btn-sm text-sm-center' %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

