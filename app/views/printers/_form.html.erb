<%= simple_form_for printer do |f| %>
  <div class="modal-body">
    <div class="card-body">
      <div id="pay-invoice">
        <div class="card-body">
          <%= f.error_notification %>
          <div class="form-group">
            <label for="cc-payment" class="control-label mb-1">Nome (Código)</label>
            <%= f.input :name,required: true, label:false%>
          </div>
          <div class="row">
            <div class="col-6">
              <div class="form-group">
                <label for="cc-exp" class="control-label mb-1">Modelo</label>
                <%= f.input :modelo,required: true, prompt:"Modelo", :collection => (Printer.distinct.pluck(:modelo) <<  'Outro'),label:false,:input_html=>{style:'color:#999;margin-bottom:0px; margin-borrom:0px', onChange: "if($(this).val() == 'Outro'){$(this).closest('.row').find('#modelo_outro').fadeIn()}else{$(this).closest('.row').find('#modelo_outro').fadeOut()}"} %>
              </div>
            </div>
            <div class="col-6">
              <div class="form-group" id='modelo_outro' style='display:none'>
                <label for="cc-exp" class="control-label mb-1">Qual?</label>
                <%= f.input :modelo_aux,required: true, label:false%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <div class="form-group">
                <label for="cc-exp" class="control-label mb-1">Tipo</label>
                <%= f.input :tipo,required: true, prompt:"Tipo", :collection => (Printer.distinct.pluck(:tipo) <<  'Outro'),label:false,:input_html=>{style:'color:#999;margin-bottom:0px; margin-borrom:0px', onChange: "if($(this).val() == 'Outro'){$(this).closest('.row').find('#tipo_outro').fadeIn()}else{$(this).closest('.row').find('#tipo_outro').fadeOut()}"} %>
              </div>
            </div>
            <div class="col-6">
              <div class="form-group"  id='tipo_outro' style='display:none'>
                <label for="cc-exp" class="control-label mb-1">Qual?</label>
                <%= f.input :tipo_aux,required: true, label:false%>
              </div>
            </div>
          </div>
          <span>Dimensões</span>
            <div class="row">
              <div class="col-4">
                <div class="form-group">
                  <label for="cc-exp" class="control-label mb-1">X (cm)</label>
                  <%= f.input :x,required: true, label:false%>
                </div>
              </div>
              <div class="col-4">
                <div class="form-group">
                  <label for="cc-exp" class="control-label mb-1">Y (cm)</label>
                  <%= f.input :y,required: true, label:false%>
                </div>
              </div>
              <div class="col-4">
                <div class="form-group">
                  <label for="cc-exp" class="control-label mb-1">Z (cm)</label>
                  <%= f.input :z,required: true, label:false%>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="cc-payment" class="control-label mb-1">Foto de referência (opcional)</label>
              <%= f.input :attachment,required: true, label:false%>
            </div>
            <div class="form-group">
              <div class="input-group">
                <%= f.input :fechada,required: true, label:false%>
                <span style='font-size:12px; color:#616161;margin-top:3px'>Essa impressora tem capacidade de imprimir em ABS, ou seja, possui enclosure.</span>
                                              
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default font-bold w3-center" style='font-weight:bold;font-size:11px;color:white;background-color:gray' data-dismiss="modal">Cancelar</button>
      <%=f.submit "Enviar", style:"font-weight:bold;font-size:11px;color:white;background-color:orange", class:"btn btn-default dropdown-toggle font-bold w3-center" %>
    </div>
  <%end%>